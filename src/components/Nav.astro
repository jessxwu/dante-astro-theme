---
import NavLink from './NavLink.astro';
import ThemeToggle from './ThemeToggle.astro';
import siteConfig from '../data/site-config';

const navLinks = siteConfig.headerNavLinks || [];
---

<header class="w-full max-w-3xl mx-auto pt-4 pb-12 relative sm:pb-24 md:pt-8">
    <div class="flex flex-col sm:flex-row items-center justify-between mb-4 sm:mb-8">
        <div class="flex items-center mb-4 sm:mb-0">
            {
                siteConfig.logo && siteConfig.logo?.src ? (
                    <a href="/" class="mr-4">
                        <img src={siteConfig.logo.src} alt={siteConfig.logo.alt || ''} class="max-h-16" />
                    </a>
                ) : null
            }
            <div>
                <a class="font-serif text-2xl leading-tight font-medium text-main sm:text-4xl" href="/">
                    {siteConfig.title}
                </a>
                {siteConfig.subtitle && <p class="text-sm leading-tight mt-1 text-main">{siteConfig.subtitle}</p>}
            </div>
        </div>
        <nav class="relative">
            {
                navLinks.length > 0 && (
                    <div class="relative">
                        <button
                            class="menu-toggle w-8 h-8 -ml-1 flex items-center justify-center relative z-30 md:hidden"
                            aria-label="Open Menu"
                            aria-expanded="false"
                            aria-controls="menu-items"
                        >
                            <span class="menu-toggle-icon w-6 h-px relative bg-current" />
                        </button>
                        <ul id="menu-items" class="menu flex gap-6">
                            {navLinks.map((link) => (
                                <li class="py-1">
                                    <NavLink
                                        class="text-xl font-serif text-main hover:underline hover:underline-offset-2 hover:decoration-1 md:text-base"
                                        href={link.href}
                                    >
                                        {link.text}
                                    </NavLink>
                                </li>
                            ))}
                        </ul>
                    </div>
                )
            }
            <div class="absolute right-0 top-0 z-10 md:relative md:top-auto">
                <ThemeToggle />
            </div>
        </nav>
    </div>
</header>

